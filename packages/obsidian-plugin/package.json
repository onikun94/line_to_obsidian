    "dotenv": "^17.2.3",
    "esbuild": "0.27.0",
    "jsdom": "^27.2.0",
    "obsidian": "^1.10.3",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "stream-browserify": "^3.0.0"
